        <li><a href="{{ path('implantation')}}" class="nav-link px-2 link-{{ app.request.attributes.get('_route') == 'implantation' ? 'secondary' : 'dark' }}"><i class="fa-solid fa-screwdriver-wrench"></i> Implantation</a></li>
